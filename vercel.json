{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/client/vite.config.*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/client/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "packages/server/dist/index.js" },
    { "src": "/(.*)", "dest": "/packages/client/dist/$1" }
  ]
}
